<html>
  <head>
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Inter"
    />
  </head>

  <body class="height-100vh">
    <div class="logged_in_nav">
      <div class="flex">
        <div></div>
      </div>
      <div class="flex">
        <a href="https://workos.com/" target="_blank">
          <button class="button button-outline">WorkOS</button>
        </a>
      </div>
    </div>

    <div class="flex flex_column height-80vh">
      <div>
        <p style="font-size: 30px; text-align: center">
          Hi, Hello, How are you?<br />
          Please Log In!
        </p>
      </div>
      <div class="flex height-10vh">
        <div class="card height-200 width-335">
          <form method="POST" action="/login" class="mb-0">
            <div class="flex_column">
              <div>
                <span>Log in with SSO</span>
              </div>
              <hr style="width: 100%; margin-top: 15px; margin-bottom: 20px" />
              <button
                id="SAML"
                name="login_method"
                value="saml"
                class="card login_button saml_button mb-0"
              >
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
